<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    tools:context="innovate.topcoder.packagecom.innovate2017.HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="18dp">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:src="@drawable/home_menugallery"
            android:layout_alignTop="@+id/img2"
            android:layout_alignLeft="@+id/img4"
            android:layout_alignStart="@+id/img4" />

        <!-- 在中间图片的左边 -->
        <ImageView
            android:id="@+id/img2"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_toLeftOf="@id/img1"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/home_menuhackathon"/>

        <!-- 在中间图片的右边 -->
        <ImageView
            android:id="@+id/img3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/home_menusocial"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/img4"
            android:layout_toRightOf="@+id/img1"
            android:layout_toEndOf="@+id/img1" />

        <!-- 在中间图片的上面-->
        <ImageView
            android:id="@+id/img4"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_above="@id/img1"
            android:layout_centerHorizontal="true"
            android:src="@drawable/home_menuprogram"/>

        <!-- 在中间图片的下面 -->
        <ImageView
            android:id="@+id/img5"
            android:layout_width="105dp"
            android:layout_height="90dp"
            android:layout_below="@id/img1"
            android:layout_centerHorizontal="true"
            android:src="@drawable/home_menumap"/>

        <!-- 在中间图片的上面-->
        <ImageView
            android:id="@+id/img6"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:src="@drawable/home_menucheckin"
            android:layout_alignTop="@+id/img4"
            android:layout_alignLeft="@+id/img2"
            android:layout_alignStart="@+id/img2" />

        <ImageView
            android:id="@+id/img7"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:src="@drawable/home_menuspeakers"
            android:layout_marginLeft="3dp"
            android:layout_alignTop="@+id/img4"
            android:layout_toRightOf="@+id/img4"
            android:layout_toEndOf="@+id/img4" />

        <ImageView
            android:id="@+id/img8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/home_badges"
            android:layout_below="@+id/img5"
            android:layout_alignLeft="@+id/img9"
            android:layout_alignStart="@+id/img9" />

        <ImageView
            android:id="@+id/img9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/home_menusponsors"
            android:layout_above="@+id/img8"
            android:layout_alignLeft="@+id/img3"
            android:layout_alignStart="@+id/img3" />

        <ImageView
            android:id="@+id/img10"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/home_leaders"
            android:layout_below="@+id/img5"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/img11"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/home_menuproduct"
            android:layout_below="@+id/img12"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/img12"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/home_menukiosk"
            android:layout_below="@+id/img2"
            android:layout_alignLeft="@+id/img2"
            android:layout_alignStart="@+id/img2" />

        <ImageView
            android:id="@+id/img13"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/home_icon"
            android:layout_below="@+id/img11"
            android:layout_alignLeft="@+id/img2"
            android:layout_alignStart="@+id/img2" />

        <Button
            android:id="@+id/button1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/info_icon"
            android:layout_below="@+id/img8"
            android:layout_alignRight="@+id/img7"
            android:layout_alignEnd="@+id/img7" />

    </RelativeLayout>


</RelativeLayout>
