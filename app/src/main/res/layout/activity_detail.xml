<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/speakers_background"
    tools:context="innovate.topcoder.packagecom.innovate2017.DetailActivity">
    <ImageView
        android:id="@+id/speaker_img"
        android:background="@drawable/x01_alavilli_r5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="157dp" />
    <TextView
        android:id="@+id/speaker_name"
        android:text="namename"
        android:textSize="22sp"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/speaker_img"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="166dp" />
    <TextView
        android:text="titletitle"
        android:id="@+id/speaker_title"
        android:textSize="15sp"
        android:textColor="#778899"
        android:layout_width="176dp"
        android:layout_height="51dp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/speaker_name"
        app:layout_constraintLeft_toRightOf="@+id/speaker_img"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />
    <TextView
        android:text="titletitle"
        android:textColor="#FFFFFF"
        android:id="@+id/speaker_detail"
        android:layout_width="276dp"
        android:layout_height="195dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/speaker_img"
        android:layout_marginLeft="43dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        />

    <ImageView
        android:id="@+id/home_icon"
        android:layout_width="22dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/home_icon"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        tools:layout_editor_absoluteY="483dp" />

    <ImageView
        android:id="@+id/info_icon"
        android:layout_width="21dp"
        android:layout_height="21dp"
        app:srcCompat="@drawable/info_icon"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:id="@+id/schedule_arrow_left"
        android:layout_width="21dp"
        android:layout_height="29dp"
        app:srcCompat="@drawable/schedule_arrow_left"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toTopOf="@+id/speaker_img" />

</android.support.constraint.ConstraintLayout>
